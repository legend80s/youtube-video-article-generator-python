  "version": "0.2.0",
  "configurations": [
    {
      "name": "✅ `uv run langchain serve` debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Scripts/langchain.exe",
      "args": ["serve"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    
    {
      "name": "Python Debugger: `uvicorn`",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["server:app", "--reload"],
      "jinja": true
    },

    {
      "name": "Debug current file with uv",
      "type": "debugpy",
      "request": "launch",
      // 1. 用 uv 当启动器
      "program": "${command:python.interpreterPath}", // 指向当前解释器，可占位
      "args": [],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
